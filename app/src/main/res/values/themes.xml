<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BazarDor" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/day_primary</item>
        <item name="colorOnPrimary">@color/day_on_primary</item>
        <item name="colorSecondary">@color/day_secondary</item>
        <item name="colorOnSecondary">@color/day_on_secondary</item>
        <item name="background">@color/day_background</item>
        <item name="colorOnBackground">@color/day_on_background</item>
        <item name="android:textColor">@color/day_on_primary</item>
        <item name="colorSurface">@color/day_surface</item>
        <item name="colorOnSurface">@color/day_on_surface</item>
